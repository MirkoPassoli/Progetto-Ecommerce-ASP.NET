@model Ecommerce.Models.Register
@{
    ViewBag.Title = "SignIn";
}

<div class="card login-card">
    <div class="card-body">
        <h3 class="text-center mb-4">Registrati</h3>

        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label for="UserName">Indirizzo email</label>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", type = "email" } })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div class="form-group">
                <label for="UserName">Nome</label>
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
            <div class="form-group">
                <label for="Password">Password</label>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", } })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="form-group">
                <label for="Password">Ripeti Password</label>
                @Html.EditorFor(model => model.RipetiPassword, new { htmlAttributes = new { @class = "form-control", } })
                @Html.ValidationMessageFor(model => model.RipetiPassword)
            </div>


            <div class="form-group error">
                @if (@ViewBag.NotValid != null)
                {
                    <label>@ViewBag.NotValid</label>
                }
            </div>

            <button type="submit" class="btn btn-primary">Registrati</button>
        }

    </div>

    <div class="card-footer">
        @Html.ActionLink("Password dimenticata?", "ResetPassword", "Login")
    </div>

</div>