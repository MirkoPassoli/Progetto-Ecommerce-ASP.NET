@model Ecommerce.Models.Login
@{
    ViewBag.Title = "Login";
}

<div class="card login-card">
    <div class="card-body">
        <h3 class="text-center mb-4">Login</h3>

        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label for="UserName">Indirizzo email</label>
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", type = "email" } })
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
            <div class="form-group">
                <label for="Password">Password</label>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", } })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="form-group form-check">
                @Html.CheckBoxFor(model => model.Ricorda, new { htmlAttributes = new { @class = "form-check-input" } })
                <label class="form-check-label" for="Ricorda">Ricordami</label>
            </div>

            <div class="form-group error">
                @if (@ViewBag.NotValidUser != null)
                {
                    <label>@ViewBag.NotValidUser</label>
                }
            </div>

            <button type="submit" class="btn btn-primary">Accedi</button>
        }

    </div>

    <div class="card-footer">
        @Html.ActionLink("Password dimenticata?", "ResetPassword", "Login")
    </div>
    <div class="card-footer">
        @Html.ActionLink("Non hai un account? Registrati", "SignIn", "Login")
    </div>

</div>