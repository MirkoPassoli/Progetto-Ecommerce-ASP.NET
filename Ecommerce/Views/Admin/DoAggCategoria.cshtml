
@{
    ViewBag.Title = "Aggiungere Categoria";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

@if (ViewBag.a > 0)
{
    <p>Categoria aggiunta con successo, tornerai alla pagina precedente in 3 secondi</p>
}
else
{
    <p>Si è verificato un errore, tornerai alla pagina precedente in 3 secondi</p>
}

<script>
    setTimeout(() => {
        window.history.back();
    }, 3000);
</script>